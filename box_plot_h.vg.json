{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/wasting_clean.csv"
  },
  "transform": [
    { "filter": "datum.Year == '2019'" },
    {
      "lookup": "Area",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/overweight_clean.csv"
        },
        "key": "Area",
        "fields": ["Continent", "OverweightValue"]
      }
    },
    {
      "lookup": "Area",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/stunting_new.csv"
        },
        "key": "Area",
        "fields": ["Continent", "StuntingValue"]
      }
    },
    { "filter": { "field": "WastingValue", "valid": true } },
    { "filter": { "field": "OverweightValue", "valid": true } },
    { "filter": { "field": "StuntingValue", "valid": true } }
  ],
  "hconcat": [
    {
      "title": {
        "text": "Wasting",
        "subtitle": ["Being dangerously thin for one's height"]
      },
      "width": 320,
      "height": 200,
      "mark": { "type": "boxplot", "size": 25 },
      "encoding": {
        "y": { "field": "Continent", "type": "nominal" },
        "color": { "field": "Continent", "type": "nominal", "legend": null },
        "x": {
          "field": "WastingValue",
          "type": "quantitative",
          "scale": { "zero": false },
          "title": "Wasting (%)"
        }
      }
    },
    {
      "title": {
        "text": "Overweight",
        "subtitle": ["Weighing more than what's recommended for one's age"]
      },
      "width": 320,
      "height": 200,
      "mark": { "type": "boxplot", "size": 25 },
      "encoding": {
        "y": { "field": "Continent", "type": "nominal"},
        "color": {
          "field": "Continent",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#f1a2a7",
              "#e68b39",
              "#d4605b",
              "#82b5b2",
              "#68a055",
              "#aa7ba0"
            ]
          }
        },
        "x": {
          "field": "OverweightValue",
          "type": "quantitative",
          "scale": { "zero": false },
          "title": "Overweight (%)"
        }
      }
    },
    {
      "title": {
        "text": "Stunting",
        "subtitle": ["Being too short for one's age"]
      },
      "width": 320,
      "height": 200,
      "mark": { "type": "boxplot", "size": 25 },
      "encoding": {
        "y": { "field": "Continent", "type": "nominal"},
        "color": { "field": "Continent", "type": "nominal", "legend": null },
        "x": {
          "field": "StuntingValue",
          "type": "quantitative",
          "scale": { "zero": false },
          "title": "Stunting (%)"
        }
      }
    }
  ]
}
