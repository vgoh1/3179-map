{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Prevalence of obesity vs GDP per capita, 2016",
  "width": 670,
  "height": 250,
  "data": {
    "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/obesity_clean.csv"
  },
  "transform": [
    {
      "pivot": "Item",
      "value": "Value",
      "groupby": ["Area", "Year", "Continent"]
    },
    { "filter": "datum.GDP != 0 && datum.Obesity != 0" }
  ],
  "layer": [
    {
      "transform": [
        { "calculate": "1250", "as": "x_position" },
        { "calculate": "43", "as": "y_position" }
      ],
      "mark": { "type": "rect", "fill": "aliceblue", "fillOpacity": 0.05 },
      "encoding": {
        "x": { "field": "x_position", "type": "quantitative" },
        "y": { "field": "y_position", "type": "quantitative" },
        "x2": { "value": 310 },
        "y2": { "value": 0 }
      }
    },
    {
      "selection": {
        "continent_highlight": {
          "type": "multi",
          "fields": ["Continent"],
          "bind": "legend"
        }
      },
      "mark": { "type": "circle" },
      "encoding": {
        "y": {
          "field": "Obesity",
          "type": "quantitative",
          "title": "Prevalence of obesity in the adult population (%)",
          "scale": {
            "domain": [0, 70]
          }
        },
        "x": {
          "field": "GDP",
          "type": "quantitative",
          "title": "GDP per capita (int.-$)",
          "scale": { "type": "log" },
          "axis": {
            "gridOpacity": 0.5
          }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "Africa",
              "Asia",
              "Europe",
              "North America",
              "Oceania",
              "South America"
            ],
            "range": [
              "#f1a2a7",
              "#e68b39",
              "#d4605b",
              "#82b5b2",
              "#68a055",
              "#aa7ba0"
            ]
          },
          "legend": { "fillColor": "white", "orient": "top-right" }
        },
        "opacity": {
          "condition": { "selection": "continent_highlight", "value": 0.8 },
          "value": 0.2
        },
        "tooltip": [
          { "field": "Area", "type": "nominal", "title": "Country" },
          {
            "field": "Obesity",
            "type": "quantitative",
            "title": "Prevalence of obesity in adult population"
          },
          { "field": "GDP", "type": "quantitative", "title": "GDP per capita" }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 5,
        "dy": -5,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": { "field": "Area", "type": "nominal" },
        "color": { "value": "black" },
        "y": { "field": "Obesity", "type": "quantitative" },
        "x": { "field": "GDP", "type": "quantitative" },
        "opacity": {
          "condition": {
            "test": "datum['Area'] == 'Nauru' || datum['Area'] == 'Luxembourg' || datum['Area'] == 'Haiti' || datum['Area'] == 'Equatorial Guinea' || datum['Area'] == 'Kuwait' || datum['Area'] == 'Vietnam'",
            "value": 1
          },
          "value": 0
        }
      }
    },
    {
      "transform": [
        { "calculate": "'Pacific Islands'", "as": "text_annotation" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -107,
        "dy": -110,
        "fontSize": 11.5,
        "fontStyle": "bold"
      },
      "encoding": {
        "text": { "field": "text_annotation", "type": "nominal" },
        "color": { "value": "black" }
      }
    },
    {
      "transform": [
        { "calculate": "'have the highest rates'", "as": "text_annotation" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -107,
        "dy": -97,
        "fontSize": 11.5
      },
      "encoding": {
        "text": { "field": "text_annotation", "type": "nominal" },
        "color": { "value": "black" }
      }
    },
    {
      "transform": [
        { "calculate": "'of obesity in the world'", "as": "text_annotation" }
      ],
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": -107,
        "dy": -84,
        "fontSize": 11.5
      },
      "encoding": {
        "text": { "field": "text_annotation", "type": "nominal" },
        "color": { "value": "black" }
      }
    }
  ]
}
