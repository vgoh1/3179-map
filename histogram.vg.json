{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Percentage of children under 5 years old affected by wasting",
    "dx": 50,
    "fontSize": 20,
    "subtitle": "This is a subtitle",
    "subtitleColor": "red"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/wasting_clean.csv"
  },
  "transform": [
    { "filter": "datum.Year == '2019'" },
    {
      "lookup": "Area",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/overweight_clean.csv"
        },
        "key": "Area",
        "fields": ["Continent", "OverweightValue"]
      }
    }
  ],
  "facet": {
    "column": {
      "field": "Continent",
      "type": "nominal",
      "header": { "titleFontSize": 15, "labelFontSize": 12.5 }
    }
  },
  "spec": {
    "layer": [
      {
        "mark": { "type": "bar", "color": "red", "opacity": 1 },
        "encoding": {
          "x": { "bin": true, "field": "WastingValue", "title": "Percentage" },
          "y": { "aggregate": "count", "title": "Count" }
        }
      },
      {
        "mark": { "type": "bar", "color": "black", "opacity": 0.6 },
        "encoding": {
          "x": {
            "bin": true,
            "field": "OverweightValue",
            "title": "Percentage"
          },
          "y": { "aggregate": "count", "title": "Count" }
        }
      }
    ]
  }
}
