{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple bar chart with embedded data.",
  "projection": { "type": "equalEarth" },
  "width": 800,
  "height": 500,
  "title": "Undernourishment vs Food Insecurity",
  "data": {
    "url": "https://raw.githubusercontent.com/vgoh1/3179-HW9/main/data/world.topo.json",
    "format": { "type": "topojson", "feature": "world.geo" }
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/undernourishment_new.csv"
        },
        "key": "Country",
        "fields": ["Value", "Country", "Year", "BinValue"]
      }
    },
    { "filter": "datum.Country != null" }
  ],
  "mark": { "type": "geoshape" },
  "encoding": {
    "fill": {
      "field": "BinValue",
      "type": "ordinal",
      "legend": { "title": "Undernourishment (%)" },
      "sort": [
        "<2.5",
        "2.5 - 5",
        "5 - 15",
        "15 - 25",
        "25 - 35",
        "35 - 45",
        "45 - 59.5"
      ],
      "scale": { "scheme": "reds" }
    },
    "tooltip": [
      { "field": "Country", "type": "nominal" },
      { "field": "BinValue", "type": "ordinal", "title": "Undernourishment" }
    ]
  }
}
