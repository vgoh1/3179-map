{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple bar chart with embedded data.",
  "projection": { "type": "equalEarth" },
  "width": 500,
  "height": 250,
  "params": [
    {
      "name": "Year_selection",
      "value": 2016,
      "bind": {
        "input": "range",
        "min": 2016,
        "max": 2019,
        "step": 1,
        "name": "Year: "
      }
    },
    {
      "name": "Variable_selection",
      "bind": {
        "input": "select",
        "options": [
          "Undernourishment",
          "Food_Security"
        ],
        "labels": ["Undernourishment", "Food Security"],
        "name": "Attribute Selection: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vgoh1/3179-HW9/main/data/world.topo.json",
        "format": { "type": "topojson", "feature": "world.geo" }
      },
      "mark": { "type": "geoshape", "fill": "#e8e8e8", "stroke": "white" }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/vgoh1/3179-map/main/data/undernourishment_new.csv"
      },
      "transform": [
        {
          "lookup": "Country",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/vgoh1/3179-HW9/main/data/world.topo.json",
              "format": { "type": "topojson", "feature": "world.geo" }
            },
            "key": "properties.name",
            "fields": ["type", "properties", "geometry", "Item"]
          }
        },
        { "filter": "datum.Country != null" },
        { "filter": "datum.Year == Year_selection" }
      ],
      "mark": { "type": "geoshape" },
      "encoding": {
        "fill": {
          "field": "BinValue",
          "type": "ordinal",
          "legend": { "title": "Undernourishment (%)" },
          "sort": [
            "<2.5",
            "2.5 - 5",
            "5 - 15",
            "15 - 25",
            "25 - 35",
            "35 - 45",
            "45 - 59.5"
          ],
          "scale": {
            "range": [
              "#fdf1ba",
              "#f8da84",
              "#ee934f",
              "#e95c3b",
              "#d0352b",
              "#911c2a",
              "#6b1225"
            ]
          }
        },
        "tooltip": [
          { "field": "Country", "type": "nominal" },
          { "field": "Value", "type": "ordinal", "title": "Undernourishment" }
        ]
      }
    }
  ]
}
